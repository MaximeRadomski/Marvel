<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marvel.Views.MainPageDetail"
             Title="Detail">
  <StackLayout Padding="10">
    <Label Text="{Binding NbHeroesFake}"/>
    <Button BackgroundColor="Red" TextColor="White" Text="Test Kiwi" Command="{Binding TestCallCommand}"></Button>
        <ListView ItemsSource="{Binding Heroes}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding .Name}"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>